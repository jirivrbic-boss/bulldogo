{
  "outputDirectory": "public",
  "rewrites": [
    {
      "source": "/create-ad",
      "destination": "/create-ad.html"
    },
    {
      "source": "/create-ad.html",
      "destination": "/create-ad.html"
    },
    {
      "source": "/success",
      "destination": "/success.html"
    },
    {
      "source": "/failed",
      "destination": "/failed.html"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}

